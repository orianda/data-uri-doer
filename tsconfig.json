{
  "extends": "@tsconfig/node16-strictest-esm/tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./build",
    "module": "CommonJS",
    "paths": {
    },
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "resolveJsonModule": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true
  },
  "include": [
    "**/*.js",
    "**/*.ts"
  ],
  "exclude": [
    ".idea",
    ".nyc_output",
    "coverage",
    "build",
    "node_modules",
    "var"
  ]
}
